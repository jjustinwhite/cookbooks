<p>
  <strong>Name:</strong>
  <%= @recipe.name %>
</p>

<p>
  <strong>Serves:</strong>
  <%= @recipe.serves %>
</p>

<p>
  <strong>Prep time:</strong>
  <%= @recipe.prep_time %>
</p>

<p>
  <strong>Cook time:</strong>
  <%= @recipe.cook_time %>
</p>

<p>
  <strong>Prep instructions:</strong>
  <%= @recipe.prep_instructions %>
</p>

<p>
  <strong>Cook instructions:</strong>
  <%= @recipe.cook_instructions %>
</p>

<p><strong>Ingredients:</strong></p>
<hr/>
<% @recipe.ingredients.each do |ingredient| %>
  <%= ingredient.quantity.round rescue "--"%> <%= ingredient.measurement %> of <%= ingredient.name %> <hr/>
<% end %>

<p>
  <strong>Cookbook:</strong>
  <%= @recipe.cookbook.name%>
</p>

<%= link_to 'Edit', edit_recipe_path(@recipe) %> |
<%= link_to 'Back', recipes_path %>
