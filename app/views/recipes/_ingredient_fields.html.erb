<div class='nested-fields form-group'>
  <div class="field">
    <div class="form-row">
      <div class="form-group">
        <div style="padding-top: 5px;"><%= link_to_remove_association "#{fa_icon "trash-o"}".html_safe, f %></div>
      </div>
      <div class="form-group col-sm-7">
        <%= f.text_field :name, placeholder: "name", class: "form-control" %>
      </div>

      <div class="form-group col-sm-1">
        <%= f.text_field :quantity, placeholder: "quantity", class: "form-control" %>
      </div>

      <div class="form-group col-sm-3">
        <%= f.text_field :measurement, placeholder: "measurement", class: "form-control" %>
      </div>
    </div>
  </div>
</div>